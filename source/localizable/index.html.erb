<!-- Sign Up
================================================== -->

<section class="section-signup bg-faded">
  <div class="container">
    <h3 class="text-xs-center m-b-3">
      <%= I18n.t("home.contact.title") %>
    </h3>
    <form name="contact" method="POST" netlify>
      <div class="row">
        <div class="col-md-6 col-xl-3">
          <div class="form-group has-icon-left form-control-name">
            <label class="sr-only" for="inputName">
              <%= I18n.t("home.contact.company") %>
            </label>
            <input type="text" class="form-control form-control-lg" id="inputName" name="company" placeholder="<%= I18n.t("home.contact.company") %>">
          </div>
        </div>
        <div class="col-md-6 col-xl-3">
          <div class="form-group has-icon-left form-control-email">
            <label class="sr-only" for="inputEmail">
              <%= I18n.t("home.contact.email") %>
            </label>
            <input type="email" class="form-control form-control-lg" id="inputEmail" placeholder="<%= I18n.t("home.contact.email") %>" autocomplete="off" name="email">
          </div>
        </div>
        <div class="col-md-6 col-xl-3">
          <div class="form-group">
            <label class="sr-only" for="inputEmail">
              <%= I18n.t("home.contact.message") %>
            </label>
            <input type="text" class="form-control form-control-lg" id="message" placeholder="<%= I18n.t("home.contact.message") %>" autocomplete="off" name="message">
          </div>
        </div>
        <div class="col-md-6 col-xl-3">
          <div class="form-group">
            <input name="_formsubmit_id" type="text" style="display:none">
            <button type="submit" class="btn btn-primary btn-block">
              <%= I18n.t("home.contact.send") %>
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

